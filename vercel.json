{
  "rewrites": [
    { "source": "/api/:path*",          "destination": "/api/:path*" },
    { "source": "/agents",              "destination": "/agents.html" },
    { "source": "/robots.txt",          "destination": "/robots.txt" },
    { "source": "/ai-invitation.json",  "destination": "/ai-invitation.json" },
    { "source": "/system-prompt.txt",   "destination": "/system-prompt.txt" },
    { "source": "/llms.txt",            "destination": "/llms.txt" },
    { "source": "/sitemap.xml",         "destination": "/sitemap.xml" },
    { "source": "/openapi.json",        "destination": "/openapi.json" },
    { "source": "/.well-known/ai-plugin.json", "destination": "/.well-known/ai-plugin.json" },
    { "source": "/favicon.svg",         "destination": "/favicon.svg" },
    { "source": "/favicon-32.png",      "destination": "/favicon-32.png" },
    { "source": "/apple-touch-icon.png","destination": "/apple-touch-icon.png" },
    { "source": "/(.*)",                "destination": "/index.html" }
  ]
}
